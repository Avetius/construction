# Construction Management Application Environment Variables
# Copy this file to .env and customize the values

# Application Settings
NODE_ENV=production
NUXT_PORT=3000
NUXT_HOST=0.0.0.0
APP_PORT=3000

# Database Settings
NUXT_DB_PATH=/app/data/construction.db

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters
SESSION_SECRET=your-super-secure-session-secret-key-min-32-characters

# Admin User Credentials
ADMIN_EMAIL=admin@construction.com
ADMIN_PASSWORD=admin123

# External Services
SQLITE_ADMIN_PORT=8080

# API Settings
NUXT_PUBLIC_API_BASE=/api