{
  "name": "construction",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "docker:setup": "chmod +x docker-setup.sh && ./docker-setup.sh",
    "docker:setup:win": "docker-setup.bat",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:db": "docker-compose exec construction-app sqlite3 /app/data/construction.db",
    "docker:shell": "docker-compose exec construction-app sh",
    "koyeb:deploy": "chmod +x deploy-koyeb.sh && ./deploy-koyeb.sh",
    "koyeb:deploy:win": "deploy-koyeb.bat",
    "koyeb:logs": "koyeb service logs construction-app --app construction-management",
    "koyeb:status": "koyeb service get construction-app --app construction-management"
  },
  "dependencies": {
    "@nuxt/content": "^3.8.0",
    "@nuxt/eslint": "^1.10.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/scripts": "^0.13.0",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxt/ui": "^4.1.0",
    "@nuxtjs/i18n": "^10.2.0",
    "@unhead/vue": "^2.0.19",
    "better-sqlite3": "^12.4.1",
    "eslint": "^9.39.1",
    "nuxt": "^4.2.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  }
}
